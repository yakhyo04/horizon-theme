{{ 'section-footer.css' | asset_url | stylesheet_tag }}

{% liquid
  assign spacing_type = section.settings.spacing_type | default: 'padding'
  assign desktop_spacing_top = section.settings.desktop_spacing_top | default: 0
  assign desktop_spacing_bottom = section.settings.desktop_spacing_bottom | default: 0
  assign mobile_spacing_top = section.settings.mobile_spacing_top | default: 0
  assign mobile_spacing_bottom = section.settings.mobile_spacing_bottom | default: 0
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section--{{ section.settings.section_width }} footer-section footer-section--{{ spacing_type }} color-{{ section.settings.color_scheme }}"
  role="contentinfo"
  style="
    --footer-desktop-top: {{ desktop_spacing_top }}px;
    --footer-desktop-bottom: {{ desktop_spacing_bottom }}px;
    --footer-mobile-top: {{ mobile_spacing_top }}px;
    --footer-mobile-bottom: {{ mobile_spacing_bottom }}px;
  "
>
  {% liquid
      assign total_blocks = section.blocks.size

      assign has_footer_email_signup = false
      assign has_footer_links_columns = false

      for block in section.blocks
        if block.type == 'footer-email-signup'
          assign has_footer_email_signup = true
        endif

        if block.type == 'footer-links-columns'
          assign has_footer_links_columns = true
        endif
      endfor

    # Grid layout calculations
    assign grid_columns = total_blocks | at_most: 4

    # Calculate last row counts using modulo arithmetic
    # last_row_count = (total_blocks - 1) % N + 1
    assign last_row_count = total_blocks | minus: 1 | modulo: 4 | plus: 1
    assign tablet_last_row_count = total_blocks | minus: 1 | modulo: 2 | plus: 1

    # Check if there are orphaned elements (single item in last row)
    assign has_isolated_grid_item_desktop = false
    assign has_isolated_grid_item_tablet = false

    if total_blocks > 4 and last_row_count == 1
      assign has_isolated_grid_item_desktop = true
    endif

    if total_blocks == 5
      assign has_isolated_grid_item_tablet = true
    endif
  %}
  <div
    class="
      footer-content
      spacing-style
      {% if has_isolated_grid_item_desktop %}footer-content--isolated-grid-item-desktop{% endif %}
      {% if has_isolated_grid_item_tablet %}footer-content--isolated-grid-item-tablet{% endif %}
      {% if has_footer_email_signup and has_footer_links_columns %}footer-content--signup-and-columns{% endif %}
    "
    style="
      {%  render 'spacing-style', settings: section.settings %}
      --footer-gap: {{ section.settings.gap }}px;
      --grid-columns: {{ grid_columns }};
      --last-row-count: {{ last_row_count }};
      --tablet-last-row-count: {{ tablet_last_row_count }};
    "
  >
    {% content_for 'blocks' %}
  </div>
</div>

{% stylesheet %}
  .footer-content {
    contain: content;
    content-visibility: auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--footer-gap);
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .footer-content {
      grid-template-columns: repeat(min(var(--grid-columns), 3), 1fr);
      grid-auto-flow: row;
    }

    .footer-content[style*='--grid-columns: 4'] {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-content--isolated-grid-item-tablet > :last-child {
      grid-column: 1 / -1;
    }
  }

  @media screen and (min-width: 990px) {
    .footer-content {
      grid-template-columns: repeat(var(--grid-columns), 1fr);
    }

    /* Single item centered */
    .footer-content[style*='--grid-columns: 1'] {
      justify-items: center;
    }

    .footer-content--isolated-grid-item-desktop > :last-child {
      grid-column: 1 / -1;
    }
  }
{% endstylesheet %}

