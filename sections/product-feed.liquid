<script
  src="{{ 'product-recommendations.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

{% liquid
  case section.settings.layout_type
    when 'grid'
      assign classes = 'resource-list--grid'
    when 'carousel'
      assign classes = 'resource-list__carousel'
  endcase

  capture styles
    echo '--column-count-mobile: ' | append: section.settings.mobile_columns | append: ';'
    echo '--resource-list-column-gap-desktop: ' | append: section.settings.columns_gap | append: 'px;'
    echo '--resource-list-row-gap-desktop: ' | append: section.settings.rows_gap | append: 'px;'
    echo '--resource-list-columns: repeat(' | append: section.settings.columns | append: ', 1fr);'
    echo '--resource-list-columns-mobile: repeat(' | append: section.settings.mobile_columns | append: ', 1fr);'
    echo '--resource-list-column-gap-desktop: ' | append: section.settings.columns_gap | append: 'px;'
    echo '--column-count: ' | append: section.settings.columns | append: ';'
    echo '--column-count-mobile: ' | append: section.settings.mobile_columns | append: ';'
  endcapture
%}

<div
  id="product-feed-{{ section.id }}"
  class="product-feed"
  {{ section.shopify_attributes }}
>
  <div class="section-background color-{{ section.settings.color_scheme }}"></div>
  <div
    class="
      section
      section--{{ section.settings.section_width }}
      color-{{ section.settings.color_scheme }}
      section-resource-list
      spacing-style
      gap-style
    "
    style="
      {%  render 'spacing-style', settings: section.settings %}
      {%  render 'gap-style', value: section.settings.gap %}
      {{ styles }}
    "
  >
    <tabs-component
      class="
        {% if section.settings.layout_type == 'carousel' %}
          force-full-width
        {% endif %}
      "
    >
      <div
        class="tabs-navigation"
        role="tablist"
        aria-label="Collection tabs"
      >
        <button
          ref="tabButtons[]"
          role="tab"
          type="button"
          aria-controls="tab-panel-{{ section.id }}-recommendations"
          aria-selected="true"
          tabindex="0"
          on:click="tabs-component/handleTabClick"
          on:keydown="tabs-component/handleKeyDown"
          class="tab-button h2"
        >
          Recommendations
        </button>

        <button
          ref="tabButtons[]"
          role="tab"
          type="button"
          aria-controls="tab-panel-{{ section.id }}-recently-viewed"
          aria-selected="false"
          tabindex="-1"
          on:click="tabs-component/handleTabClick"
          on:keydown="tabs-component/handleKeyDown"
          class="tab-button h2"
        >
          Recently Viewed
        </button>
      </div>

      <div class="tab-panels-container">
        <tab-panel
          ref="tabPanels[]"
          id="tab-panel-{{ section.id }}-recommendations"
          role="tabpanel"
          tabindex="0"
          aria-labelledby="tab-{{ section.id }}-recommendations"
          animate-selector=".product-card"
          stagger="50"
          duration="800"
          class="tab-panel"
        >
          {% content_for 'block',
            type: '_product-recommendations',
            id: 'product-feed-recommendations',
            classes: classes,
            layout_type: section.settings.layout_type,
            carousel_on_mobile: section.settings.carousel_on_mobile,
            columns_gap: section.settings.columns_gap,
            section_settings: section.settings
          %}
        </tab-panel>

        <tab-panel
          ref="tabPanels[]"
          id="tab-panel-{{ section.id }}-recently-viewed"
          role="tabpanel"
          tabindex="0"
          aria-labelledby="tab-{{ section.id }}-recently-viewed"
          animate-selector=".product-card"
          stagger="50"
          duration="800"
          hidden
          aria-hidden="true"
          class="tab-panel"
        >
          {% content_for 'block',
            type: '_recently-viewed-products',
            id: 'product-feed-recently-viewed',
            classes: classes,
            layout_type: section.settings.layout_type,
            carousel_on_mobile: section.settings.carousel_on_mobile,
            columns_gap: section.settings.columns_gap,
            section_settings: section.settings
          %}
        </tab-panel>
      </div>
    </tabs-component>
  </div>
</div>

{% stylesheet %}
  .product-recommendations__skeleton-item {
    aspect-ratio: 3 / 4;
    background-color: var(--color-foreground);
    opacity: var(--skeleton-opacity);
    border-radius: 4px;
  }

  @media screen and (max-width: 749px) {
    .product-recommendations__skeleton-item:nth-child(2n + 1) {
      display: none;
    }
  }

  product-recommendations:has([data-has-recommendations='false']) {
    display: none;
  }
{% endstylesheet %}

