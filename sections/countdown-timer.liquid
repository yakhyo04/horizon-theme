  "name": "Countdown timer",
  "class": "shopify-section--countdown-timer",
  "settings": [
    {
      "type": "header",
      "content": "Visibility Settings"
    },
    {
      "type": "textarea",
      "id": "template_visibility",
      "label": "Template visibility",
      "info": "Enter the templates to show the timer on. Separate with commas. Leave blank to show on all templates.",
      "default": "index, product, collection, cart"
    },
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "richtext",
      "id": "body_before_timer",
      "label": "Body",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla et quam nec nisl lacinia ultrices. Nullam nec nisl lacinia, ultrices nisl nec, ultrices nisl.</p>"
