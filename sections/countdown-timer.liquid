    },
    {
      "type": "text",
      "id": "start_date",
      "label": "Start Date",
      "info": "Format: MM/DD/YYYY",
      "placeholder": "Format: MM/DD/YYYY"
    },
    {
      "type": "text",
      "id": "start_time",
      "label": "Start Time",
