{% liquid
  assign max_items = section.settings.max_products
  assign collections = section.settings.collection_list
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  data-testid="featured-collections"
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    section-resource-list
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
>
  {% if collections.count > 0 %}
    <tabs-component
      class="
        {% if section.settings.layout_type == 'carousel' %}
          force-full-width
        {% endif %}
      "
    >
      <div
        class="tabs-navigation"
        role="tablist"
        aria-label="Collection tabs"
      >
        {% for collection in collections %}
          <button
            ref="tabButtons[]"
            role="tab"
            type="button"
            aria-controls="tab-panel-{{ section.id }}-{{ forloop.index }}"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
            tabindex="{% if forloop.first %}0{% else %}-1{% endif %}"
            on:click="tabs-component/handleTabClick"
            on:keydown="tabs-component/handleKeyDown"
            class="tab-button h2"
          >
            {{ collection.title }}
          </button>
        {% endfor %}
      </div>

      <div class="tab-panels-container">
        {% for collection in collections %}
          <tab-panel
            ref="tabPanels[]"
            id="tab-panel-{{ section.id }}-{{ forloop.index }}"
            role="tabpanel"
            tabindex="0"
            aria-labelledby="tab-{{ section.id }}-{{ forloop.index }}"
            animate-selector=".product-card"
            stagger="50"
            duration="800"
            {% unless forloop.first %}
              hidden
              aria-hidden="true"
            {% endunless %}
            class="tab-panel"
          >
            {% capture list_items %}
            {% if collection != blank and shop.products_count != 0 %}
              {% paginate collection.products by max_items %}
                {% for product in collection.products limit: max_items %}
                  <div class="resource-list__item">
                    {% # theme-check-disable UniqueStaticBlockId %}
                      {% content_for 'block', type: '_product-card', id: 'static-product-card', closest.product: product %}
                    {% # theme-check-enable UniqueStaticBlockId %}
                  </div>

                  {% unless forloop.last %}
                    <!--@list/split-->
                  {% endunless %}
                {% endfor %}
              {% endpaginate %}
            {% else %}
              {% for i in (1..max_items) %}
                <div class="resource-list__item">
                  {% # theme-check-disable UniqueStaticBlockId %}
                    {% content_for 'block', type: '_product-card', id: 'static-product-card', closest.product: null %}
                  {% # theme-check-enable UniqueStaticBlockId %}
                </div>

                {% unless forloop.last %}
                  <!--@list/split-->
                {% endunless %}
              {% endfor %}
            {% endif %}
          {% endcapture %}

            {% liquid
              assign list_items_array = list_items | strip | split: '<!--@list/split-->'
            %}

            {%
              render 'resource-list',
                list_items: list_items,
                list_items_array: list_items_array,
                settings: section.settings,
                slide_count: max_items,
                display_scrollbar: display_scrollbar,
                content_type: 'products',
                test_id: 'featured-collections-list-' | append: forloop.index
            %}
          </tab-panel>
        {% endfor %}
      </div>
    </tabs-component>
  {% else %}
    <div class="empty-state">
      <p>Please select collections to display</p>
    </div>
  {% endif %}
</div>

{% stylesheet %}
  tabs-component {
    display: block;
    width: 100%;
  }

  .tabs-navigation {
    display: flex;
    gap: 32px;
    margin-bottom: 24px;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
    padding-inline: var(--util-page-margin-offset);
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    scrollbar-color: transparent transparent;
    scrollbar-width: none;
  }

  .tabs-navigation::-webkit-scrollbar {
    width: 0;
  }

  .tabs-navigation::-webkit-scrollbar-track {
    background: transparent;
  }

  .tabs-navigation::-webkit-scrollbar-thumb {
    background: transparent;
    border: none;
  }

  .tab-button {
    position: relative;
    padding: 0;
    background: transparent;
    border: none;
    cursor: pointer;
    color: rgba(var(--color-foreground));
    white-space: nowrap;
    opacity: 0.5;
    transition: opacity 0.2s ease;
  }

  .tab-button:first-child {
    padding-left: 0;
  }

  .tab-button::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    right: 0;
    height: 2px;
    background: rgb(var(--color-foreground));
    transform: scaleX(0);
    transition: transform 0.2s ease;
  }

  .tab-button:hover {
    color: rgb(var(--color-foreground));
  }

  .tab-button[aria-selected='true'] {
    opacity: 1;
  }

  .tab-button[aria-selected='true']::after {
    transform: scaleX(1);
  }

  .tab-button:focus {
    outline: 2px solid rgba(var(--color-foreground), 0.5);
    outline-offset: 2px;
  }

  .tab-panel {
    outline: none;
  }

  .empty-state {
    padding: 48px 24px;
    text-align: center;
    color: rgba(var(--color-foreground), 0.6);
  }

  @media (max-width: 749px) {
    .tabs-navigation {
      gap: 16px;
      margin-bottom: 16px;
    }
  }
{% endstylesheet %}

