{%- capture content -%}{% render 'text', block: block %}{%- endcapture -%}

{% render 'conditional-display', content: content, entity: block %}

{% schema %}
{
  "name": "t:names.text",
  "tag": null,
  "settings": [
    {
      "type": "richtext",
      "id": "text",
      "label": "t:settings.text"
    },
    {
      "type": "header",
      "content": "t:content.layout"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit"
        },
        {
          "value": "100%",
          "label": "t:options.fill"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "select",
      "id": "max_width",
      "label": "t:settings.max_width",
      "options": [
        {
          "value": "narrow",
          "label": "t:options.narrow"
        },
        {
          "value": "normal",
          "label": "t:options.normal"
        },
        {
          "value": "none",
          "label": "t:options.none"
        }
      ],
      "default": "normal"
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "t:settings.alignment",
      "default": "left",
      "visible_if": "{{ block.settings.width == '100%' }}"
    },
    {
      "type": "header",
      "content": "t:content.typography",
      "visible_if": "{{ block.settings.settings_display_type_preset and block.settings.custom_text_wrap }}"
    },
    {
      "type": "select",
      "id": "type_preset",
      "label": "t:settings.preset",
      "options": [
        {
          "value": "rte",
          "label": "t:options.default"
        },
        {
          "value": "paragraph",
          "label": "t:options.paragraph"
        },
        {
          "value": "h1",
          "label": "t:options.h1"
        },
        {
          "value": "h2",
          "label": "t:options.h2"
        },
        {
          "value": "h3",
          "label": "t:options.h3"
        },
        {
          "value": "h4",
          "label": "t:options.h4"
        },
        {
          "value": "h5",
          "label": "t:options.h5"
        },
        {
          "value": "h6",
          "label": "t:options.h6"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "rte",
      "visible_if": "{{ block.settings.settings_display_type_preset }}",
    },
    {
      "type": "checkbox",
      "id": "settings_display_type_preset",
      "label": "Display type preset settings",
      "default": true,
      "visible_if": "{{ false }}"
    },
    {
      "type": "select",
      "id": "font",
      "label": "t:settings.font",
      "options": [
        {
          "value": "var(--font-body--family)",
          "label": "t:options.body"
        },
        {
          "value": "var(--font-heading--family)",
          "label": "t:options.heading"
        }
      ],
      "default": "var(--font-body--family)",
      "visible_if": "{{ block.settings.type_preset == 'custom' }}"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "t:settings.size",
      "options": [
        {
          "value": "",
          "label": "t:options.default"
        },
        {
          "value": "0.625rem",
          "label": "10px"
        },
        {
          "value": "0.75rem",
          "label": "12px"
        },
        {
          "value": "0.875rem",
          "label": "14px"
        },
        {
          "value": "1rem",
          "label": "16px"
        },
        {
          "value": "1.125rem",
          "label": "18px"
        },
        {
          "value": "1.25rem",
          "label": "20px"
        },
        {
          "value": "1.5rem",
          "label": "24px"
        },
        {
          "value": "2rem",
          "label": "32px"
        },
        {
          "value": "2.5rem",
          "label": "40px"
        },
        {
          "value": "3rem",
          "label": "48px"
        },
        {
          "value": "3.5rem",
          "label": "56px"
        },
        {
          "value": "4.5rem",
          "label": "72px"
        },
        {
          "value": "5.5rem",
          "label": "88px"
        },
        {
          "value": "7.5rem",
          "label": "120px"
        },
        {
          "value": "9.5rem",
          "label": "152px"
        },
        {
          "value": "11.5rem",
          "label": "184px"
        }
      ],
      "default": "1rem",
      "visible_if": "{{ block.settings.type_preset == 'custom' }}"
    },
    {
      "type": "select",
      "id": "line_height",
      "label": "t:settings.line_height",
      "options": [
        {
          "value": "tight",
          "label": "t:options.tight"
        },
        {
          "value": "normal",
          "label": "t:options.normal"
        },
        {
          "value": "loose",
          "label": "t:options.loose"
        }
      ],
      "default": "normal",
      "visible_if": "{{ block.settings.type_preset == 'custom' }}"
    },
    {
      "type": "select",
      "id": "letter_spacing",
      "label": "t:settings.letter_spacing",
      "options": [
        {
          "value": "tight",
          "label": "t:options.tight"
        },
        {
          "value": "normal",
          "label": "t:options.normal"
        },
        {
          "value": "loose",
          "label": "t:options.loose"
        }
      ],
      "default": "normal",
      "visible_if": "{{ block.settings.type_preset == 'custom' }}"
    },
    {
      "type": "select",
      "id": "case",
      "label": "t:settings.case",
      "options": [
        {
          "value": "none",
          "label": "t:options.default"
        },
        {
          "value": "uppercase",
          "label": "t:options.uppercase"
        }
      ],
      "default": "none",
      "visible_if": "{{ block.settings.type_preset == 'custom' }}"
    },
    {
      "type": "checkbox",
      "id": "custom_text_wrap",
      "label": "t:settings.custom_text_wrap",
      "default": false,
      "visible_if": "{{ block.settings.type_preset != 'custom' }}"
    },
    {
      "type": "select",
      "id": "wrap",
      "label": "t:settings.wrap",
      "options": [
        {
          "value": "pretty",
          "label": "t:options.pretty"
        },
        {
          "value": "balance",
          "label": "t:options.balance"
        },
        {
          "value": "nowrap",
          "label": "t:options.none"
        }
      ],
      "visible_if": "{{ block.settings.type_preset == 'custom' or block.settings.custom_text_wrap != false }}"
    },
    {
      "type": "select",
      "id": "color",
      "label": "t:settings.color",
      "options": [
        {
          "value": "var(--color-foreground)",
          "label": "t:options.text"
        },
        {
          "value": "var(--color-foreground-heading)",
          "label": "t:options.heading"
        },
        {
          "value": "var(--color-primary)",
          "label": "t:options.link"
        }
      ],
      "default": "var(--color-foreground)",
      "visible_if": "{{ block.settings.type_preset != 'rte' }}"
    },
    {
      "type": "header",
      "content": "t:content.appearance"
    },
    {
      "type": "checkbox",
      "id": "background",
      "label": "t:settings.background",
      "default": false
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "t:settings.background_color",
      "alpha": true,
      "default": "#00000026",
      "visible_if": "{{ block.settings.background }}"
    },
    {
      "type": "range",
      "id": "corner_radius",
      "label": "t:settings.corner_radius",
      "default": 0,
      "min": 0,
      "max": 50,
      "step": 1,
      "visible_if": "{{ block.settings.background }}"
    },
    {
      "type": "header",
      "content": "t:content.padding",
      "visible_if": "{{ block.settings.settings_display_padding }}"
    },
    {
      "type": "checkbox",
      "id": "custom_padding",
      "label": "t:settings.custom_padding",
      "default": false,
      "visible_if": "{{ block.settings.settings_display_padding }}"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0,
      "visible_if": "{{ block.settings.settings_display_padding and block.settings.custom_padding }}"
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0,
      "visible_if": "{{ block.settings.settings_display_padding and block.settings.custom_padding }}"
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0,
      "visible_if": "{{ block.settings.settings_display_padding and block.settings.custom_padding }}"
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0,
      "visible_if": "{{ block.settings.settings_display_padding and block.settings.custom_padding }}"
    },
    {
      "type": "checkbox",
      "id": "settings_display_padding",
      "label": "Display padding settings",
      "default": true,
      "visible_if": "{{ false }}"
    },
    /* [START] Conditional Display */
    {
      "type": "header",
      "content": "Conditional Display"
    },
    {
      "type": "checkbox",
      "id": "conditional_display_enabled",
      "label": "Enable conditional display",
      "default": false
    },
    {
      "type": "header",
      "content": "Conditional Display: Region",
      "visible_if": "{{ block.settings.conditional_display_enabled }}"
    },
    {
      "type": "checkbox",
      "id": "condition_region_enabled",
      "label": "Restrict by region",
      "default": false,
      "visible_if": "{{ block.settings.conditional_display_enabled }}"
    },
    {
      "type": "text",
      "id": "condition_region",
      "label": "Region(s)",
      "info": "Enter the region name or code. Use commas to separate multiple regions.",
      "visible_if": "{{ block.settings.conditional_display_enabled and block.settings.condition_region_enabled }}"
    },
    {
      "type": "select",
      "id": "condition_region_display_type",
      "label": "Display type",
      "options": [
        {
          "value": "show",
          "label": "Show"
        },
        {
          "value": "hide",
          "label": "Hide"
        }
      ],
      "default": "show",
      "visible_if": "{{ block.settings.conditional_display_enabled and block.settings.condition_region != blank }}"
    },
    {
      "type": "header",
      "content": "Conditional Display: Product",
      "visible_if": "{{ block.settings.conditional_display_enabled }}"
    },
    {
      "type": "checkbox",
      "id": "condition_product_inventory_enabled",
      "label": "Restrict by product inventory",
      "default": false,
      "visible_if": "{{ block.settings.conditional_display_enabled }}"
    },
    {
      "type": "select",
      "id": "condition_product_inventory",
      "label": "Availability",
      "options": [
        {
          "value": "in_stock",
          "label": "In Stock"
        },
        {
          "value": "out_of_stock",
          "label": "Out of Stock"
        }
      ],
      "default": "in_stock",
      "visible_if": "{{ block.settings.conditional_display_enabled and block.settings.condition_product_inventory_enabled }}"
    },
    {
      "type": "checkbox",
      "id": "condition_product_property_enabled",
      "label": "Restrict by product property",
      "default": false,
      "visible_if": "{{ block.settings.conditional_display_enabled }}"
    },
    {
      "type": "text",
      "id": "condition_product_property",
      "label": "Product property name",
      "visible_if": "{{ block.settings.conditional_display_enabled and block.settings.condition_product_property_enabled }}"
    },
    {
      "type": "select",
      "id": "condition_product_property_operator",
      "label": "Operator",
      "options": [
        {
          "value": "=",
          "label": "="
        },
        {
          "value": ">",
          "label": ">"
        },
        {
          "value": ">=",
          "label": ">="
        },
        {
          "value": "contains",
          "label": "Contains"
        }
      ],
      "default": "=",
      "visible_if": "{{ block.settings.conditional_display_enabled and block.settings.condition_product_property_enabled }}"
    },
    {
      "type": "text",
      "id": "condition_product_property_value",
      "label": "Product property value",
      "visible_if": "{{ block.settings.conditional_display_enabled and block.settings.condition_product_property_enabled }}"
    },
    {
      "type": "checkbox",
      "id": "condition_product_property_case_insensitive",
      "label": "Ignore case during string comparison",
      "default": false,
      "visible_if": "{{ block.settings.conditional_display_enabled and block.settings.condition_product_property_enabled and block.settings.condition_product_property_operator != '>' and block.settings.condition_product_property_operator != '>=' }}"
    },
    {
      "type": "checkbox",
      "id": "condition_product_property_invert_operator",
      "label": "Invert operator",
      "default": false,
      "visible_if": "{{ block.settings.conditional_display_enabled and block.settings.condition_product_property_enabled }}"
    },
    {
      "type": "header",
      "content": "Conditional Display: Date & Time",
      "visible_if": "{{ block.settings.conditional_display_enabled }}"
    },
    {
      "type": "checkbox",
      "id": "condition_date_enabled",
      "label": "Restrict by current date",
      "default": false,
      "visible_if": "{{ block.settings.conditional_display_enabled }}"
    },
    {
      "type": "text",
      "id": "condition_date_start",
      "label": "Start date",
      "info": "Format: YYYY-MM-DD HH:MM:SS",
      "visible_if": "{{ block.settings.conditional_display_enabled and block.settings.condition_date_enabled }}"
    },
    {
      "type": "text",
      "id": "condition_date_end",
      "label": "End date",
      "info": "Format: YYYY-MM-DD HH:MM:SS",
      "visible_if": "{{ block.settings.conditional_display_enabled and block.settings.condition_date_enabled }}"
    },
    {
      "type": "select",
      "id": "condition_date_display_type",
      "label": "Display type",
      "options": [
        {
          "value": "show",
          "label": "Show"
        },
        {
          "value": "hide",
          "label": "Hide"
        }
      ],
      "default": "show",
      "visible_if": "{{ block.settings.conditional_display_enabled and block.settings.condition_date_enabled }}"
    }
    /* [END] Conditional Display */
  ],
  "presets": [
    {
      "name": "t:names.text",
      "category": "t:categories.basic",
      "settings": {
        "text": "t:html_defaults.make_things_better_extended"
      }
    }
  ]
}
{% endschema %}