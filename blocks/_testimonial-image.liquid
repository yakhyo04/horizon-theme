{% liquid
  assign image = closest.metaobject.testimonial.image.value
  assign author = closest.metaobject.testimonial.author.value
  assign block_settings = block.settings
  assign ratio = 1


  case block_settings.image_ratio
    when 'landscape'
      assign ratio = settings.image_aspect_ratio_landscape
    when 'portrait'
      assign ratio = settings.image_aspect_ratio_portrait
    when 'square'
      assign ratio = settings.image_aspect_ratio_square
    when 'adapt'
      assign ratio = image.aspect_ratio
    else
      assign ratio = block_settings.image_ratio
  endcase


  if ratio == 0 or ratio == null
    assign ratio = 1
  endif


  assign ratio_mobile = ratio
%}


{% capture class %}
  testimonial-card__image testimonial-image--{{ block.id }} testimonial-image--height-{{ block_settings.height }} spacing-style size-style
{% endcapture %}


{% capture style %}
  --ratio-desktop: {{ ratio }};
  --ratio-mobile: {{ ratio_mobile }};
  {% render 'size-style', settings: block_settings %}
  {% render 'spacing-style', settings: block_settings %}
{% endcapture %}


{% capture image_border_style %}
  --ratio-desktop: {{ ratio }};
  --ratio-mobile: {{ ratio_mobile }};
  {% render 'border-override', settings: block_settings %}
{% endcapture %}


{% liquid
  assign media_width_desktop = '100vw'
  assign media_width_mobile = '100vw'
  assign sizes = 'auto, (min-width: 750px) ' | append: media_width_desktop | append: ', ' | append: media_width_mobile
  assign widths = '240, 352, 832, 1200, 1600, 1920, 2560, 3840'
%}


<div
  class="{{ class }}"
  style="{{ style }}"
  {{ block.shopify_attributes }}
>
  {%- if image -%}
    {{
      image
      | image_url: width: 3840
      | image_tag:
        width: image.width,
        widths: widths,
        height: image.height,
        alt: author,
        loading: 'lazy',
        class: 'testimonial-card__image-element border-style',
        style: image_border_style,
        sizes: sizes
    }}
  {%- else -%}
    <div class="placeholder-image border-style size-style" style="{{ image_border_style }}">
      {{ 'lifestyle-1' | placeholder_svg_tag }}
    </div>
  {%- endif -%}
</div>


{% stylesheet %}
  .placeholder-image {
    --ratio: var(--ratio-desktop);
    position: relative;
    aspect-ratio: var(--ratio);
    overflow: hidden;


    @media screen and (width < 750px) {
      --ratio: var(--ratio-mobile, var(--ratio-desktop));
    }
  }


  .placeholder-image img {
    width: 100%;
    height: 100%;
    aspect-ratio: var(--ratio);
  }


  .testimonial-card__image {
    --ratio: var(--ratio-desktop);
    display: flex;


    /* When the image is nested in a group, section, etc, respect the parent's horizontal alignment */
    justify-content: var(--horizontal-alignment, 'inline-start');


    @media screen and (width < 750px) {
      --ratio: var(--ratio-mobile, var(--ratio-desktop));
    }
  }


  .testimonial-image--height-fill .testimonial-card__image-element {
    height: 100%;
  }


  .testimonial-card__image-element {
    object-fit: cover;
    aspect-ratio: var(--ratio);
  }
{% endstylesheet %}


